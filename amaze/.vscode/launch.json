    "version": "0.2.0",
    "configurations": [
        {
            "command": "akashic-sandbox",
            "name": "Run akashic-sandbox",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "command": "akashic export html --output ./export/html",
            "name": "Run akashic export html",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "command": "akashic export zip --output ./export/game",
            "name": "Run akashic export zip",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "type": "pwa-chrome",
            "request": "launch",
            "name": "Launch Chrome against localhost",
            "url": "http://localhost:3000/game",
            "webRoot": "${workspaceFolder}"
        }
    ]
}